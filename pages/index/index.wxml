<!--index.wxml-->
<view class="container">
  <view>
       <picker mode="selector" range="{{cities}}" value="{{index}}"  range-key="{{'city'}}"   bindchange="cityChange">
           <view class="picker">
             工作城市：{{ selected_city}}
           </view>
        </picker>
   </view>
   <view >
          <view class="item">税前工资：{{salary}}</view>
          <input  bindinput="bindSalaryInput" placeholder="税前工资" class="item_input"/>
   </view>
   <view >
          <view class="item">缴费基准：{{payment}}</view>
          <input  bindinput="bindSalaryInput" placeholder="缴费基准" class="item_input"/>
   </view>
   <view class="btn_con">
         <button type="primary" size="default	"  bindtap="primary" > 计算</button>
   </view>
   <view>
       计算结果：
   </view>
   <view class="computed"> 住房公积金：{{}}</view>
</view>
